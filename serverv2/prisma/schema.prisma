generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model playlists {
  id           String    @id @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  room_part_of String?   @unique @db.Uuid
  title        String?
  created_at   DateTime? @default(now()) @db.Timestamp(6)
  rooms        rooms?    @relation(fields: [room_part_of], references: [id], onDelete: Cascade, onUpdate: NoAction)
  songs        songs[]
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
model rooms {
  id           String     @id @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  created_at   DateTime   @default(now()) @db.Timestamptz(6)
  code         String     @unique
  current_song String?    @db.Uuid
  playlists    playlists?
  songs        songs?     @relation(fields: [current_song], references: [id])
  users        users[]
}

model songs {
  id               String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  playlist_part_of String?    @db.Uuid
  url              String
  title            String
  thumbnail        String
  artist           String
  playable         Boolean    @default(false)
  ytUrl            String
  added_by         String?    @db.Uuid
  position         Int?
  added_at         DateTime?  @default(now()) @db.Timestamp(6)
  rooms            rooms[]
  users            users?     @relation(fields: [added_by], references: [id], onDelete: NoAction, onUpdate: NoAction)
  playlists        playlists? @relation(fields: [playlist_part_of], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model users {
  id            String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email         String          @unique
  password      String
  name          String
  room_part_of  String?         @db.Uuid
  authenticated Boolean?        @default(false)
  tokenVersion  Int             @default(1)
  fcm_token     String?
  feedback      feedback[]
  notifications notifications[]
  songs         songs[]
  rooms         rooms?          @relation(fields: [room_part_of], references: [id], onUpdate: NoAction)
}

model notifications {
  id      String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id String  @db.Uuid
  title   String
  body    String?
  data    Json?
  users   users   @relation(fields: [user_id], references: [id], onDelete: Cascade, map: "users_references_notification")
}

model feedback {
  id         String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  body       String
  ip_address String  @db.VarChar
  user_id    String? @db.Uuid
  users      users?  @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade, map: "user_id_references_users")
}
